from tkinter import *
import pygame
import time





        


Window = Tk()
Window.title("Mr. Rerick Pop Quiz Meter")
Window.geometry("800x400")


Title = Label(Window, text= "Mr. Rerick's Pop Quiz Meter", font=("Courier New", 30), fg="Black")
Title.pack()


class Meterbarthingy():
    def __init__(self, Wide = 600, Amount = 84) :
        self.Amount = Amount

        self.background = Frame(Window, bg = "gray85", width= 600, height= 60 , borderwidth= 2, relief="solid" )
        self.Foreground = Button(self.background, bg = "PaleGreen1", width= self.Amount, height= 10 )

        self.pack(10, 10)

    def pack(self, padxx, padyy):
        self.background.pack(padx=padxx, pady= padyy )
        self.background.pack_propagate(False)
        self.Foreground.pack(fill= "y",  anchor= "w")

    def changePercent(self, percentage ):
        self.percentage = percentage
        Newwidth = int(self.Amount * self.percentage)
        self.Foreground.config(width= Newwidth)
         
        

 
        






RERICKMeTER = Meterbarthingy()
RERICKMeTER.changePercent(.8)

Screen = Label(Window, text = "", font=("Courier New", 40), fg="Black")
Screen.pack(fill= "both", expand= 1)







Window.mainloop()